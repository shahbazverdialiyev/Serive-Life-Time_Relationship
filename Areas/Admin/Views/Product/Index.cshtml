
@model DbSet<Product>
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Tables</h1>
    <p class="mb-4">
        DataTables is a third party plugin that is used to generate the demo table below.
        For more information about DataTables, please visit the <a target="_blank"
                                                                   href="https://datatables.net">official DataTables documentation</a>.
    </p>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between">
            <h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>
            <a class="btn btn-success" asp-action="Create">Create</a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>No</th>
                            <th>Name</th>
                            <th>Catagory</th>
                            <th>Price</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int No = 0;
                        }
                        @foreach (Product item in Model)
                        {
                            <tr>
                                <td>@(++No)</td>
                                <td>@item.Name</td>
                                <td>Catagory</td>
                                <td>@item.Price</td>
                                <td class="border-0"><a asp-action="Details" asp-route-id="@item.Id">details</a></td>
                                <td class="border-0"><a asp-action="Delete" asp-route-id="@item.Id" class="fs-5">X</a></td>
                                <td class="border-0"><a asp-action="Edit" asp-route-id="@item.Id" class="fs-5">edit</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>